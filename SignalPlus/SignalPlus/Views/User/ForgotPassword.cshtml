@model SignalPlus.DTOs.User.ForgotPasswordDTO
@if (ViewBag.ResetRequested == true)
{
    <div class="container mt-5" style="max-width: 500px;">
        <div class="alert alert-success text-center">
            <h4>Проверете вашия имейл</h4>
            <p>Ако съществува акаунт с този имейл адрес, ще получите връзка за възстановяване на паролата.</p>
        </div>
    </div>
}

<div class="container mt-5" style="max-width: 800px;">
    <div class="card shadow-sm rounded-3">
        <div class="card-body">
            <h3 class="text-center mb-4">Забравена парола</h3>

            <form asp-action="ForgotPassword" method="post">
                <div class="form-group mb-4">
                    <label asp-for="Email" class="form-label fs-5"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        <input asp-for="Email" class="form-control form-control-lg" placeholder="Въведете вашия имейл" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-warning btn-lg">Изпрати връзка за възстановяване</button>
                </div>
            </form>
        </div>
    </div>
</div>
<style>
    @@media (max-width: 1000px) {
        .container {
            width: 100%
        }

        .form-group {
            display: flex;
            flex-direction: column;
            gap: 0px;
        }

        .input-group {
            align-items: stretch;
        }

        .input-group-text {
            width: 20%;
            justify-content: center;
            border-radius: 0.375rem;
        }

        .form-control {
            width: 100%;
        }
    }
</style>
