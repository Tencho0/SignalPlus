@model SignalPlus.DTOs.User.LoginDTO

<div class="container" style="max-width: 1200px;">
    <div class="card shadow-lg rounded-3">
        <div class="card-body">
            <h2 class="text-center mb-4">Вход</h2>

            <form asp-action="Login" method="post">
                <div class="form-group mb-4">
                    <label asp-for="Email" class="form-label fs-5"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                        <input asp-for="Email" class="form-control form-control-lg" placeholder="Въведете имейл" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Password" class="form-label fs-5"></label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                        <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Въведете парола" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <a asp-action="ForgotPassword" class="small">Забравена парола?</a>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Влез</button>
                </div>
            </form>

            <hr class="my-4" />
            <div class="text-center">
                <p class="mb-0">Нямате регистрация? <a asp-action="Register">Регистрирайте се сега</a></p>
            </div>
        </div>
    </div>
</div>
<style>
    @@media (max-width: 1000px) {
        .container{
            width: 100%
        }

        .form-group {
            display: flex;
            flex-direction: column;
            gap: 0px;
        }

        .input-group {
            align-items: stretch;
        }

        .input-group-text {
            width: 20%;
            justify-content: center;
            border-radius: 0.375rem;
        }

        .form-control {
            width: 100%;
        }
    }
</style>
