@model SignalPlus.DTOs.User.MyProfileDto
@{
    ViewBag.Title = "Моят профил";
    //var passwordModel = ViewBag.ChangePasswordModel as ChangePasswordDTO ?? new ChangePasswordDTO();
}

<style>
    body {
        margin: 0;
        padding: 20px;
        font-family: 'Segoe UI', sans-serif;
        background-color: #f5f5f5;
    }

    a {
        text-decoration: none;
    }

    .sidebar-box {
        width: 260px;
        border: 1px solid #ddd;
        background-color: white;
        padding: 15px;
        box-sizing: border-box;
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
    }

        .sidebar-box h4 {
            color: #b49100;
            font-size: 13px;
            font-weight: bold;
            margin-bottom: 15px;
            margin-left: 5px;
            text-transform: uppercase;
        }

    .menu {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .menu-item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 12px 10px;
        font-size: 14px;
        cursor: pointer;
        border-radius: 4px;
        position: relative;
        transition: background 0.2s ease;
    }

        .menu-item:hover,
        .menu-item.active {
            background-color: #fcf9ee;
        }

        .menu-item .left {
            display: flex;
            align-items: center;
        }

        .menu-item .icon {
            font-size: 16px;
            width: 20px;
            margin-right: 8px;
            color: #b49100;
        }

        .menu-item .label {
            color: #222;
            white-space: nowrap;
        }

        .menu-item .badge {
            background-color: #b49100;
            color: white;
            font-size: 11px;
            padding: 2px 6px;
            border-radius: 50%;
            margin-left: 8px;
            font-weight: bold;
        }

        .menu-item .arrow {
            font-size: 14px;
            color: #777;
        }
</style>
<section class="internal-content">
    <div class="container">
        <!-- Header -->
        <div class="sidebar-box">
            <h4>МОЯТ ПРОФИЛ</h4>
            <ul class="menu">

                <a asp-controller="User" asp-action="MyProfile">
                <li class="menu-item active">
                    <div class="left">
                        <span class="icon">👤</span>
                        <span class="label">Профил</span>
                    </div>
                    <span class="arrow">›</span>
                </li>
                </a>

                <a asp-controller="User" asp-action="MySignals">
                <li class="menu-item">
                    <div class="left">
                        <span class="icon">🔔</span>
                        <span class="label">Сигнали</span>
                        <span class="badge">@Model.MySignalsCount</span>
                    </div>
                    <span class="arrow">›</span>
                </li>
                </a>

                <a asp-controller="User" asp-action="DeleteProfile">
                <li class="menu-item">
                    <div class="left">
                        <span class="icon">🗑️</span>
                        <span class="label">Изтриване на профил</span>
                    </div>
                    <span class="arrow">›</span>
                </li>
                </a>

                <form asp-controller="User" asp-action="Logout" method="post" style="margin: 0;">
                    <button type="submit" style="all: unset; cursor: pointer; width: 100%;">
                <li class="menu-item">
                    <div class="left">
                        <span class="icon">🔓</span>
                        <span class="label">Изход</span>
                    </div>
                    <span class="arrow">›</span>
                </li>
                </button>
                </form>

            </ul>
        </div>

        <main class="profile">
            <h1>Моите данни</h1>
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <form asp-action="UpdateProfile" asp-controller="User" method="post">
                <div class="form-group">
                    <label asp-for="Name">Имена</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>

                    <label asp-for="PhoneNumber">Телефон</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="Email" />
                    <label>Email</label>
                    <input type="email" value="@Model.Email" class="form-control" disabled />
                </div>

                <h2>Промяна на парола</h2>
                <div class="form-group">
                    <label asp-for="NewPassword">Нова парола</label>
                    <input asp-for="NewPassword" class="form-control" type="password" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>

                    <label asp-for="ConfirmPassword">Повтори парола</label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="save-btn">ЗАПАЗИ</button>
            </form>
        </main>
    </div>
</section>