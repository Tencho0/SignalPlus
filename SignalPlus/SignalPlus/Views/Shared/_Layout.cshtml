            <a href="/about">ЗА СИГНАЛ+</a>
            <a href="/faq">ЧЗВ</a>
            <a href="/contact">КОНТАКТИ</a>
            <a href="/user/login">ВХОД/РЕГИСТРАЦИЯ</a>
        </div>
    
 @*        <a class="login-register-btn" data-remote="true" href="/clients/sign_in">
